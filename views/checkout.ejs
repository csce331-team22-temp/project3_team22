<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link rel="stylesheet" href="/styles/checkout.css">
</head>
<body>
    <div class="container">
        <h1>Finalize the Bill</h1>

        <!-- Cart items display -->
        <div id="cart-items">
            <% let total = 0; %>
            <% orderItems.forEach(item => { %>
                <p><%= item.name %> - $<%= item.price.toFixed(2) %></p>
                <% total += item.price; %>
            <% }) %>
        </div>
        <h3>Total: <span id="total">$<%= total.toFixed(2) %></span></h3>
        <button id="cardCheckout" onclick="togglePaymentOptions()">Card Checkout</button>
        <button id="cashCheckout" onclick="pay('cash')">Cash Checkout</button>
        <button id="backToOrder" onclick="goBack()">Previous Page</button>
    </div>

    <!-- Payment Options (hidden until cardCheckout button pressed) -->
    <div id="payment-options" style="display: none;">
        <h2>Select Payment Method</h2>
        <button id="creditButton" onclick="pay('credit')">Credit Card</button>
        <button id="debitButton" onclick="pay('debit')">Debit Card</button>
        <button id="giftCardButton" onclick="pay('gift card')">Gift Card</button>
        <button onclick="togglePaymentOptions()">Close</button>
    </div>

    <!-- Button to clear the order items -->
    <button id="clearOrder" onclick="clearOrder()">Clear Order</button>

    <script>
        function goBack() {
            window.history.back();
        }
    </script>

    <!-- Link to your external script file -->
    <script src="/scripts/checkout.js"></script>
</body>
</html>