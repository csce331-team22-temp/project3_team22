<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title %> â€” ShareTea</title>
  <link rel="stylesheet" href="/styles/menu.css" />
  <link rel="stylesheet" href="/styles/menu-board.css" />

  <script>
    function googleTranslateElementInit() {
      new google.translate.TranslateElement({ pageLanguage: 'en' }, 'google_translate_element');
    }
  </script>
  <script src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
</head>

<body>
  <!-- Only Google Translate remains at top-right -->
  <div id="google_translate_element" style="position: absolute; top: 10px; right: 10px;"></div>

  <header><h1>ðŸ§‹ ShareTea</h1></header>

  <main class="welcome-section">
    <h2>Welcome to ShareTea!</h2>
    <p>Select a category from the menu below to explore our drinks.</p>

    <section class="menu-board">
      <% Object.entries(categories).forEach(([category, drinks]) => { %>
        <h3><%= category %></h3>
        <div class="menu-category">
          <% drinks.forEach(drink => { %>
            <div class="menu-item">
              <img src="/images/<%= drink.image_url %>" alt="<%= drink.drinkname %>" />
              <h4 class="drink-name"><%= drink.drinkname %></h4>
              <p class="price">$<%= drink.price.toFixed(2) %></p>
              <p class="calories"><%= drink.calories %> kcal</p>
              <% if (drink.allergens) { %>
                <p class="allergens">Allergens: <%= drink.allergens %></p>
              <% } %>
              <details class="ingredients">
                <summary>Ingredients</summary>
                <p><%= drink.ingredients %></p>
              </details>
              <details class="macros">
                <summary>Macros</summary>
                <p><%= drink.macros %></p>
              </details>
            </div>
          <% }) %>
        </div>
      <% }) %>
    </section>

    <button onclick="location.href='/'" class="home-btn">Home Page</button>
  </main>

  <script src="/scripts/speaktext.js"></script>
</body>
</html>
