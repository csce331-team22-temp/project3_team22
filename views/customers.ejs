<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customers Page</title>
</head>
<body>
    <h1>Welcome to the Store!</h1>
    
    <div>
        <!-- Example items to add to the cart -->
        <button onclick="addItemToCart('Ginger Tea', 3.99)">Add Ginger Tea</button>
        <button onclick="addItemToCart('Mango Ice Blended Tea', 4.99)">Add Mango Tea</button>
        <button onclick="addItemToCart('Taro Milk Tea', 5.99)">Add Taro Milk Tea</button>
        <button onclick="addItemToCart('Lemon Lavender Tea', 6.99)">Add Lemon Lavender Tea</button>
    </div>

    <h2>Your Cart</h2>
    <ul id="cart-items">
        <!-- Cart items will be dynamically inserted here -->
    </ul>

    <button onclick="proceedToCheckout()">Proceed to Checkout</button>

    <script>
        // Function to add an item to the cart by sending a POST request to the server
        function addItemToCart(name, price) {
            fetch('/customers/add-item', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ name, price })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Item added to the cart!');
                    updateCart();  // Update the cart UI with new items
                } else {
                    alert('Error adding item.');
                }
            })
            .catch(error => console.error('Error:', error));

            updateCart();
        }

        // Function to update the cart UI
        function updateCart() {
            fetch('/customers/checkout')  // Fetch the cart from the checkout page (for rendering)
                .then(response => response.json())
                .then(data => {
                    const cartItemsList = document.getElementById('cart-items');
                    cartItemsList.innerHTML = '';  // Clear the current list
                    data.orderItems.forEach(item => {
                        const li = document.createElement('li');
                        li.textContent = `${item.name} - $${item.price.toFixed(2)}`;
                        cartItemsList.appendChild(li);
                    });
                });
        }

        // Function to proceed to the checkout page
        function proceedToCheckout() {
            window.location.href = '/customers/checkout';  // Redirect to checkout page
        }
    </script>
</body>
</html>